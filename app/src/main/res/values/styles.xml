<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedTop">
        <item name="cornerSizeTopLeft">10%</item>
        <item name="cornerSizeTopRight">10%</item>
    </style>
    <style name="RoundedTopShade">
        <item name="cornerSizeTopLeft">8%</item>
        <item name="cornerSizeTopRight">8%</item>
    </style>

    <!-- Enhanced Bottom Navigation Indicator -->
    <style name="App.Custom.Indicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/color_primary</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="TitleText">
        <item name="android:textSize">20sp</item> <!-- Title size -->
        <item name="android:textStyle">bold</item> <!-- Bold -->
        <item name="android:textColor">@color/color_primary_dark</item> <!-- Optional -->
    </style>
</resources>