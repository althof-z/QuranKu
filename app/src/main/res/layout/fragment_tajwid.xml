<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_desc_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Tajwid Rules"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Learn about the 3 tajwid rules that QuranKu will predict"
                    android:textSize="14sp"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Mad Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_mad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/step_number_background"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/notosans"
                            android:text="1"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/notosans"
                        android:text="Mad"
                        android:textColor="@color/color_primary_dark"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp"
                    android:text="Mad is a tajwid rule that requires lengthening the sound of mad letters (alif, waw, ya) for 2 or more counts."
                    android:textColor="@color/black"
                    android:textSize="15sp" />

                <!-- Example -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/notosans"
                    android:text="Example:"
                    android:textColor="@color/color_primary_dark"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp"
                    android:text="â€¢ Alif meets alif sukun\nâ€¢ Waw meets waw sukun\nâ€¢ Ya meets ya sukun"
                    android:textColor="@color/black"
                    android:textSize="14sp" />

                <!-- Audio Player -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/card_edge"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_play_mad"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="Play Mad Example"
                        android:background="@drawable/placeholder_box"
                        app:icon="@drawable/placeholder_box"
                        app:iconTint="@color/color_primary"
                        app:iconSize="38dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp" />

                    <SeekBar
                        android:id="@+id/sb_mad"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:layout_weight="1"
                        android:progressBackgroundTint="@color/material_dynamic_neutral50"
                        android:progressTint="@color/color_primary"
                        android:thumbTint="@color/color_primary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Ikhfa Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_ikhfa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_mad">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/step_number_background"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosans" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ikhfa"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ikhfa is a tajwid rule that requires hiding the sound of nun sukun or tanwin when followed by one of the 15 ikhfa letters."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Example -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Ikhfa Letters (15 letters):"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Øª Ø« Ø¬ Ø¯ Ø° Ø² Ø³ Ø´ Øµ Ø¶ Ø· Ø¸ Ù Ù‚ Ùƒ"
                    android:textSize="16sp"
                    android:textColor="@color/color_primary"
                    android:fontFamily="@font/notosans"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Audio Player -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_edge"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_Playikh"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/placeholder_box"
                        app:icon="@drawable/placeholder_box"
                        app:iconTint="@color/color_primary"
                        app:iconSize="38dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        android:contentDescription="Play Ikhfa Example" />

                    <SeekBar
                        android:id="@+id/sb_ikh"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:progressBackgroundTint="@color/material_dynamic_neutral50"
                        android:progressTint="@color/color_primary"
                        android:thumbTint="@color/color_primary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Idgham Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_idgham"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_ikhfa">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header with number -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:background="@drawable/step_number_background"
                        android:gravity="center"
                        android:layout_marginEnd="16dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/white"
                            android:fontFamily="@font/notosans" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Idgham"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idgham is a tajwid rule that requires merging the sound of nun sukun or tanwin into the following letter, making it one sound."
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="16dp" />

                <!-- Example -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Idgham Letters (6 letters):"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="ÙŠ Ø± Ù… Ù„ Ùˆ Ù†"
                    android:textSize="16sp"
                    android:textColor="@color/color_primary"
                    android:fontFamily="@font/notosans"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Audio Player -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/card_edge"
                    android:padding="12dp">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_PlaySurah"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@drawable/placeholder_box"
                        app:icon="@drawable/placeholder_box"
                        app:iconTint="@color/color_primary"
                        app:iconSize="38dp"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        android:contentDescription="Play Idgham Example" />

                    <SeekBar
                        android:id="@+id/sb_idg1"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_marginEnd="12dp"
                        android:progressBackgroundTint="@color/material_dynamic_neutral50"
                        android:progressTint="@color/color_primary"
                        android:thumbTint="@color/color_primary" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Info Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/color_primary"
            app:layout_constraintTop_toBottomOf="@+id/card_idgham">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“š How to Use"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1. Listen to the example audio for each rule\n2. Practice by recording your voice\n3. The app will analyze and provide feedback\n4. Check the results in the History page"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@+id/card_info" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
