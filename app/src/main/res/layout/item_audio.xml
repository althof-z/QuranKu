<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="16dp"
    app:cardBackgroundColor="@color/white"
    app:strokeColor="#F0F0F0"
    app:strokeWidth="1dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- File Icon and Title Section -->
        <LinearLayout
            android:id="@+id/header_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btn_delete"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Audio File Icon -->
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_mic"
                android:tint="#8BC34A"
                android:layout_marginEnd="12dp" />

            <!-- File Name and Duration -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_audio_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Audio File"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosans"
                    android:maxLines="1"
                    android:ellipsize="end" />

                <TextView
                    android:id="@+id/tv_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00:00"
                    android:textSize="12sp"
                    android:textColor="#6C757D"
                    android:fontFamily="@font/notosans"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Delete Button -->
        <ImageButton
            android:id="@+id/btn_delete"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_trash"
            android:tint="#FF3B30"
            android:contentDescription="Delete recording"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Audio Player Controls -->
        <LinearLayout
            android:id="@+id/player_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="16dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/header_section">

            <!-- Play/Pause Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_Play"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:background="@drawable/ic_play"/>

            <!-- SeekBar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="16dp"
                android:progressTint="@color/color_primary_dark"
                android:thumbTint="@color/color_primary"
                android:progressBackgroundTint="#E9ECEF" />

        </LinearLayout>

        <!-- Tajwid Analysis Results -->
        <LinearLayout
            android:id="@+id/tajwid_section"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/player_section">

            <!-- Section Title -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hasil Prediksi"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="#495057"
                android:fontFamily="@font/notosans"
                android:layout_marginBottom="12dp" />

            <!-- Tajwid Results Grid -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Mad Result -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/tajwid_result_background"
                    android:padding="8dp"
                    android:layout_marginEnd="6dp">

                    <TextView
                        android:id="@+id/tv_mad"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mad: -"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#495057"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Idgham Result -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/tajwid_result_background"
                    android:padding="8dp"
                    android:layout_marginHorizontal="3dp">

                    <TextView
                        android:id="@+id/tv_idgham"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Idgham: -"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#495057"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Ikhfa Result -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:background="@drawable/tajwid_result_background"
                    android:padding="8dp"
                    android:layout_marginStart="6dp">

                    <TextView
                        android:id="@+id/tv_ikhfa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ikhfa: -"
                        android:textSize="12sp"
                        android:textStyle="bold"
                        android:textColor="#495057"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
