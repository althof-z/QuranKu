<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_desc_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_info"
                    android:contentDescription="Tutorial Icon"
                    app:tint="@color/color_primary" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Ikuti langkah-langkah berikut untuk menggunakan QuranKu"
                    android:textSize="14sp"
                    android:textColor="@color/color_secondary"
                    android:fontFamily="@font/notosans"
                    android:gravity="center" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step 1 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_step1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/step_number_background"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Masuk ke Halaman Rekam"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Buka aplikasi dan pilih tab 'Rekam' pada bar navigasi di bagian bawah"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_home"
                    android:layout_marginStart="12dp"
                    app:tint="@color/color_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step 2 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_step2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_step1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/step_number_background"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="2"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mulai Rekam Suara"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Klik tombol dengan ikon mikropon untuk mulai merekam. Lantunkan contoh ayat Al-Qur'an yang tertera. Icon akan berubah menjadi stop saat rekaman berlangsung."
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_mic"
                    android:layout_marginStart="12dp"
                    app:tint="@color/color_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step 3 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_step3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_step2">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/step_number_background"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="3"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Selesai Rekam"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Klik tombol centang untuk mengakhiri sesi perekaman dan mulai analisis tajwid"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_check"
                    android:layout_marginStart="12dp"
                    app:tint="@color/color_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Step 4 Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_step4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_step3">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="20dp"
                android:gravity="center_vertical">

                <LinearLayout
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/step_number_background"
                    android:gravity="center"
                    android:layout_marginEnd="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="4"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Lihat Hasil Analisis"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/color_primary_dark"
                        android:fontFamily="@font/notosans" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="Masuk ke halaman 'Hasil' untuk melihat hasil penilaian rekaman dan informasi prediksi pembacaan tajwid"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_history"
                    android:layout_marginStart="12dp"
                    app:tint="@color/color_primary" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Tips Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_tips"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/color_primary"
            app:layout_constraintTop_toBottomOf="@+id/card_step4">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ’¡ Tips Penggunaan"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="â€¢ Pastikan suara jelas dan tidak ada gangguan\nâ€¢ Baca dengan tempo yang sesuai\nâ€¢ Tunggu analisis selesai sebelum merekam lagi\nâ€¢ Periksa riwayat untuk melihat perkembangan"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/notosans"
                    android:lineSpacingExtra="4dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@+id/card_tips" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>