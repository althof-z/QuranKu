<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_desc_gradient"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Header Section with Logo -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center">

                <ImageView
                    android:id="@+id/iv_logoInfo"
                    android:layout_width="120dp"
                    android:layout_height="140dp"
                    android:src="@drawable/logo_vert"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/app_name" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:text="Quran Tajwid Learning App"
                    android:textSize="14sp"
                    android:textColor="@color/color_secondary"
                    android:fontFamily="@font/notosans" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Main Description Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_header">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_aboutQuranKu"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About QuranKu"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="16dp" />

                <TextView
                    android:id="@+id/tv_appDesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="QuranKu is an Android app that helps you learn to recite the Qur'an with proper tajwid. Using speech recognition technology, the app can detect recitation mistakes and provide automatic feedback. QuranKu uses MFCC and SVM methods to recognize user voices.\n\nThis app was created as part of a thesis project at the PLN Institute of Technology (IT-PLN), with the hope of becoming a learning tool and a source of ongoing good deeds.\n\nLet's improve your Qur'an recitation with QuranKu!"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:lineSpacingExtra="4dp"
                    android:fontFamily="@font/notosans" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Features Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/card_features"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="6dp"
            app:cardBackgroundColor="@color/white"
            app:layout_constraintTop_toBottomOf="@+id/card_description">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Features"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/color_primary_dark"
                    android:fontFamily="@font/notosans"
                    android:layout_marginBottom="16dp" />

                <!-- Feature 2 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_check"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/color_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Tajwid Error Detection"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Feature 3 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_history"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/color_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Learning History"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

                <!-- Feature 4 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_info"
                        android:layout_marginEnd="12dp"
                        app:tint="@color/color_primary" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="MFCC &amp; SVM Technology"
                        android:textSize="15sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/notosans" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Bottom Spacing -->
        <View
            android:layout_width="match_parent"
            android:layout_height="24dp"
            app:layout_constraintTop_toBottomOf="@+id/card_features" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>